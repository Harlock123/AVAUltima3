<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UltimaIII.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
             x:Class="UltimaIII.Avalonia.Views.LoadGameView"
             x:DataType="vm:LoadGameViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#e0d0c0"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#0d0a1a" Padding="40">
        <Grid RowDefinitions="Auto,*,Auto,Auto">
            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Load Game"
                       FontSize="28" FontWeight="Bold" Foreground="#ffd700"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Save List -->
            <Border Grid.Row="1" Background="#1a1510" CornerRadius="6" Padding="16">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Saves}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:SaveEntryViewModel">
                                <Border Padding="8,6" Margin="0,2" CornerRadius="4"
                                        PointerPressed="SaveEntry_PointerPressed"
                                        Background="Transparent"
                                        Cursor="Hand">
                                    <Grid ColumnDefinitions="24,*,Auto">
                                        <!-- Selection marker -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayMarker}"
                                                   FontSize="16" FontWeight="Bold"
                                                   Foreground="#ffd700"
                                                   VerticalAlignment="Center"/>

                                        <!-- Save info -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding SaveName}"
                                                       FontSize="15" FontWeight="Bold"
                                                       Foreground="#e0d0c0"/>
                                            <TextBlock Text="{Binding Summary}"
                                                       FontSize="12" Foreground="#908070"/>
                                        </StackPanel>

                                        <!-- Date -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding SavedAt}"
                                                   FontSize="11" Foreground="#706050"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Status -->
            <TextBlock Grid.Row="2"
                       Text="{Binding StatusMessage}"
                       FontSize="12" Foreground="#c06060"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       MinHeight="18"/>

            <!-- Controls Footer -->
            <TextBlock Grid.Row="3"
                       FontSize="12" Foreground="#605040"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Text="W/S: Browse   Enter: Load   Del: Delete   Esc: Back"/>
        </Grid>
    </Border>
</UserControl>
