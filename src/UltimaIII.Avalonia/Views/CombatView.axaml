<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:UltimaIII.Avalonia.ViewModels"
             xmlns:controls="using:UltimaIII.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
             x:Class="UltimaIII.Avalonia.Views.CombatView"
             x:DataType="vm:CombatViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#2a2a4a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#4a4a6a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#3a3a5a"/>
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Combat Header -->
        <Border Grid.Row="0" Background="#3a1a1a" Padding="10">
            <Grid>
                <TextBlock Text="COMBAT!" FontSize="20" FontWeight="Bold" Foreground="#ff6060" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Current Turn: " Foreground="#808080"/>
                    <TextBlock Text="{Binding CurrentCombatantName}" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Combat Grid -->
        <Border Grid.Row="1" Background="#0a0a0a" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <controls:CombatMapControl x:Name="CombatMap"
                                       CombatSystem="{Binding Combat}"
                                       TileSize="32"
                                       TargetX="{Binding TargetX}"
                                       TargetY="{Binding TargetY}"
                                       ShowTarget="{Binding IsSelectingTarget}"/>
        </Border>

        <!-- Combat Actions -->
        <Border Grid.Row="2" Background="#252540" Padding="10">
            <Grid>
                <!-- Normal Actions -->
                <StackPanel IsVisible="{Binding IsNormalMode}" HorizontalAlignment="Center">
                    <TextBlock Text="WASD/Arrows: Move    T: Attack    C: Cast    P: Pass    F: Flee"
                               FontSize="11"
                               Foreground="#808080"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                        <Button Content="[T] Attack"
                                Command="{Binding AttackCommand}"
                                IsEnabled="{Binding IsPlayerTurn}"/>
                        <Button Content="[C] Cast"
                                Command="{Binding CastCommand}"
                                IsEnabled="{Binding IsPlayerTurn}"/>
                        <Button Content="[P] Pass"
                                Command="{Binding PassCommand}"
                                IsEnabled="{Binding IsPlayerTurn}"/>
                        <Button Content="[F] Flee"
                                Command="{Binding FleeCommand}"
                                IsEnabled="{Binding IsPlayerTurn}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Target Selection -->
                <StackPanel IsVisible="{Binding IsSelectingTarget}" HorizontalAlignment="Center">
                    <TextBlock Text="Select Target: Click to select, Double-click to confirm | WASD to move cursor, Enter/Space to confirm, Esc to cancel"
                               FontSize="12"
                               Foreground="#ffd700"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                        <Button Content="[Enter] Confirm" Command="{Binding ConfirmTargetCommand}"/>
                        <Button Content="[Esc] Cancel" Command="{Binding CancelTargetCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Spell Selection Overlay -->
        <Grid Grid.RowSpan="3" IsVisible="{Binding IsSelectingSpell}">
            <Border Background="#80000000"/>
            <Border Background="#0d0a1a" CornerRadius="8"
                    BorderBrush="#4a4a8a" BorderThickness="2"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="500" MaxHeight="450">
                <Grid RowDefinitions="Auto,*,Auto,Auto">

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#1a1530" Padding="15,10" CornerRadius="6,6,0,0">
                        <StackPanel>
                            <TextBlock Text="CAST SPELL"
                                       FontSize="20" FontWeight="Bold" Foreground="#ffd700"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentCombatantName, StringFormat='Caster: {0}'}"
                                       FontSize="12" Foreground="#a0a0c0"
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Spell List -->
                    <Border Grid.Row="1" Padding="10,6" MinHeight="120">
                        <ScrollViewer x:Name="SpellScrollViewer" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AvailableSpells}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type vm:SpellChoiceViewModel}">
                                        <Border Padding="6,3" Margin="0,1"
                                                CornerRadius="3"
                                                Background="{Binding RowBackground}">
                                            <TextBlock Text="{Binding DisplayText}"
                                                       FontSize="13"
                                                       Opacity="{Binding ItemOpacity}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Spell Description -->
                    <Border Grid.Row="2" Background="#1a1a30" Padding="10,6" Margin="8,2,8,6"
                            CornerRadius="4" MinHeight="30">
                        <TextBlock Text="{Binding SelectedSpellDescription}"
                                   FontSize="11"
                                   Foreground="#a0c0ff"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Controls Footer -->
                    <Border Grid.Row="3" Background="#15120d" Padding="10,8" CornerRadius="0,0,6,6">
                        <TextBlock Text="W/S: Browse   Enter: Cast   Esc: Cancel"
                                   FontSize="11" Foreground="#606080"
                                   HorizontalAlignment="Center"/>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
